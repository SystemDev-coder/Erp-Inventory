PORT=5000

# PostgreSQL Database for containers
PGHOST=db
PGPORT=5432
PGDATABASE=erp_inventory
PGUSER=postgres
PGPASSWORD=123
PGSCHEMA=ims

# Values used by postgres container
POSTGRES_DB=erp_inventory
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123

# Frontend URL (CORS)
CLIENT_ORIGIN=http://localhost:5173

# JWT Secrets (CHANGE THESE - use at least 32 characters)
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-change-this-in-production
