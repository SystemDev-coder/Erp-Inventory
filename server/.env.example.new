# Server Configuration
NODE_ENV=development
PORT=5000

# PostgreSQL Database
PGHOST=localhost
PGPORT=5432
PGDATABASE=erp_inventory
PGUSER=postgres
PGPASSWORD=your_password_here
PGSCHEMA=ims

# Client Origin
CLIENT_ORIGIN=http://localhost:5173

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-min-32-chars
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_DAYS=7

# Cookie Configuration
COOKIE_NAME=rt
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Password Reset
RESET_CODE_EXPIRES_MIN=10
DEV_RETURN_RESET_CODE=true
