FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache bash curl

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install
ENV PATH="/app/node_modules/.bin:${PATH}"

# Copy ALL source code (no bind mount needed)
COPY . .

EXPOSE 5173
CMD ["npm","run","dev","--","--host","0.0.0.0","--port","5173"]
